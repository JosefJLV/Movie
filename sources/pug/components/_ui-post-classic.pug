mixin post-classic(obj)
  // Post Classic
  article.post-classic&attributes(attributes)
    a.post-classic-figure(href=obj.link ? obj.link : links.post): +img(obj.img).post-classic-image
    time.post-classic-time(datetime=obj.time.datetime)=obj.time.time
    .post-classic-divider
    p.heading-5.post-classic-title: a(href=obj.link ? obj.link : links.post)=obj.title
    
 
